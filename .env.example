# ============================================
# Hotel Royal Orchid - Environment Template
# Copy this file to .env and fill in your values
# ============================================

# Flask Configuration
SECRET_KEY=change-this-to-random-secret-key

# Database Configuration
DATABASE_URL=sqlite:///instance/hotel.db

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourapp.com

# Payment Gateway - Razorpay
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=yyyyyyyyyyyyyyyyyyyy
RAZORPAY_WEBHOOK_SECRET=zzzzzzzzzzzzzzzz

# SMS Gateway
MSG91_AUTH_KEY=your-auth-key
MSG91_SENDER_ID=HOTELR

# JWT Configuration
JWT_SECRET_KEY=jwt-secret-key-here

# Admin Configuration
ADMIN_EMAIL=admin@yourapp.com

# AI Configuration
OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxxxxxx
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Application Settings
DEBUG=True
